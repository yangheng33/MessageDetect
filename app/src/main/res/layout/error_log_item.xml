<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <CheckBox
        android:visibility="gone"
        android:id="@+id/error_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/error_del"
        android:id="@+id/error_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="title" />

    <TextView
        android:id="@+id/error_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="2013-01-01 24:22:22" />

    <TextView
        android:layout_marginTop="5dp"
        android:layout_alignLeft="@+id/error_title"
        android:layout_below="@+id/error_title"
        android:id="@+id/error_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/part"/>
</RelativeLayout>