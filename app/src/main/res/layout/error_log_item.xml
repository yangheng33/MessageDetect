<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/part"
    android:padding="10dp"
    android:layout_marginBottom="10dp">

    <TextView
        android:layout_toLeftOf="@+id/error_del"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginLeft="5dp"
        android:id="@+id/error_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="title" />

    <CheckBox
        android:layout_alignParentRight="true"
        android:visibility="invisible"
        android:id="@+id/error_del"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/error_title"
        android:layout_alignBottom="@+id/error_title"
        />

    <View
        android:layout_below="@+id/error_title"
        android:id="@+id/error_divier"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:background="@color/grey"
        />

    <TextView
        android:layout_below="@+id/error_divier"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/error_id"
        android:text="123124"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_alignBottom="@+id/error_id"
        android:id="@+id/error_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="2013-01-01 24:22:22" />

    <TextView
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:layout_alignLeft="@+id/error_title"
        android:layout_below="@+id/error_id"
        android:id="@+id/error_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />


</RelativeLayout>